{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "resolveJsonModule": true,
        "strict": true,
        "strictBindCallApply": false,
        "removeComments": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "node_modules",
        ".vscode"
    ]
}