{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "esModuleInterop": true,
        "lib": [
            "es2020"
        ],
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "resolveJsonModule": true,
        "strict": true,
        "strictBindCallApply": false,
        "removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode"
    ]
}